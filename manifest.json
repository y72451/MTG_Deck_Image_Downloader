{
  "manifest_version": 3,
  "name": "MTG Deck Image Downloader",
  "version": "1.2.2",
  "description": "從 Moxfield 與 Archidekt 匯出套牌並下載卡圖",
  "permissions": [
    "storage",
    "scripting",
    "downloads",
    "tabs",
    "activeTab",
    "notifications"
  ],
  "host_permissions": [
    "https://moxfield.com/decks/*",
    "https://archidekt.com/decks/*",
    "https://api.scryfall.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "background": {
	"service_worker": "background.js",
	"type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://moxfield.com/decks/*",
        "https://archidekt.com/decks/*"
      ],
      "js": [
        "content.js"
      ],
      "type": "module"
    }
  ],
"web_accessible_resources": [
  {
    "resources": [
      "lib/jszip-esm2015.js",
      "lib/indexeddb.js"
    ],
    "matches": ["<all_urls>"]
  }
]
}